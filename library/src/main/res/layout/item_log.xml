<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_msg"
        android:layout_alignTop="@+id/tv_msg"
        android:gravity="center"
        android:padding="4dp"
        android:text="tag name"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/tv_tag"
        android:layout_toRightOf="@+id/tv_tag"
        android:padding="4dp"
        tools:text="test test test test test test test test test test test test test test test test" />
</RelativeLayout>
